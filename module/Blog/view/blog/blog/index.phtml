$title = 'My blogs';
$this->headTitle($title);
?>
<h1><?php echo $this->escapeHtml($title); ?></h1>
<p>
    <a href="<?php echo $this->url('blog', array('action' => 'add')); ?>">Add new blog</a>
</p>

<table class="table">
    <tr>
        <th>Title</th>
        <th>Text</th>
        <th></th>
    </tr>
