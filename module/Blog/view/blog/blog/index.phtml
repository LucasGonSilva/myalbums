        <tr>
            <td><?php echo $this->escapeHtml($blog->title); ?></td>
            <td><?php echo $this->escapeHtml($blog->text); ?></td>
            <td>
                <a href="<?php echo $this->url('blog',
                    array('action' => 'edit', 'id' => $blog->id)); ?>" class="btn btn-info btn-xs"><i class="glyphicon glyphicon-pencil"></i></a>
                <a href="<?php echo $this->url('blog',
                    array('action' => 'delete', 'id' => $blog->id)); ?>" class="btn btn-danger btn-xs"><i class="glyphicon glyphicon-trash"></i></a>
            </td>
        </tr>
    <?php endforeach; ?>
</table>
